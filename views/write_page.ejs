<title>My BLOGS | Jenny</title>
<style>
    .bg-sparta {
        background-color: #f595e5 !important;
    }

    .btn-sparta {
        color: #ffffff !important;
        background-color: #e8344e !important;
        border-color: #e8344e !important;
    }

    .btn-outline-sparta {
        color: #e8344e !important;
        background-color: #ffffff !important;
        border-color: #e8344e !important;
    }

    body {
        background-color: beige;
    }

    .board_write .title input[type="text"],
    .board_write .info input[type=text],
    .board_write .info input[type="password"] {
        width: 100%;
        padding-top: 10px;
        padding-right: 10px;
        padding-bottom: 10px;
        padding-left: 10px;
        box-sizing: border-box;

    }

    .board_write .title dt,
    .board_write .title dd,
    .board_write .info dt,
    .board_write .info dd {
        display: inline-block;
        vertical-align: middle;
    }
</style>


<script>
    $(document).ready(function () {
        callFunc()
    });
    //등록
    function posting() {
        let today = new Date(); //오늘 날짜 가져오고
        console.log(typeof today);
        let title = $('#title').val()
        let author = $("#author").val()
        let password = $("#password").val()
        let content = $("#content").val()
        //서버작동
        $.ajax({
            type: "POST",
            url: `/api/serve`,
            data: {

                "date": today, //내림차순으로 하려고 numbering
                "title": title,
                "author": author,
                "password": password,
                "content": content,
            },

            success: function (answerbox) {
                if (answerbox["result"] == "success") {
                    alert('글 업데이트 완료');
                    window.location.href = "/list";
                }
            }
        });
    }

    function closing() {
        alert('작성된 게시물이 취소되었습니다');
        window.location.href = "/list";
    }
</script>

<body>
    <div>
        <div class="board_write_wrap">
            <div class="board_write">
                <div class="title">
                    <dl>
                        <dt>제목</dt>
                        <dd>
                            <input type="text" id="title" placeholder="제목 입력">
                        </dd>
                    </dl>
                </div>
                <div class="info">
                    <dl>
                        <dt>작성자</dt>
                        <dd>
                            <input type="text" id="author" placeholder="작성자 입력">
                        </dd>
                    </dl>
                    <dl>
                        <dt>비밀번호</dt>
                        <dd>
                            <input type="password" id="password" placeholder="비밀번호 입력">
                        </dd>
                    </dl>
                </div>
                <div class="content">
                    <textarea placeholder="내용 입력" id="content"></textarea>
                </div>
            </div>
            <div class="bt_wrap">
                <button onclick="posting()">글쓰기</button>
                <button onclick="closing()">취소</button>
            </div>
        </div>
    </div>
</body>



</html>