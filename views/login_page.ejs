<title>로그인 | Jenny</title>
<script>
    //등록
    function loginStep() {
        let nickname = $("#input-nickname").val();
        let password1 = $("#input-password").val();
        //let login = $("#login").val();
        //let password2 = $("#input-password2").val()
         
        if(nickname =="") {
            $("#helpNickname").text("닉네임을 입력해주세요");
            $("#input-nickname").focus()
            return;
        } else {
            $("#help-password-login").text("")
        }
        console.log(nickname, password1)
        //서버작동
        $.ajax({
            type: "POST",
            url: `/api/signIn`,
            data: {
                nickname: nickname,
                password1: password1,
            },

            success: function (loginbox) {
                $.cookie('mytoken', loginbox['token'], {path: '/'});
                window.location.replace("/list")
                
            },
            error: function (error) { 
                alert(error.responseJSON.errorMessage); 
            },
        })    
        function makeNew() {
            return alert(loginbox['회원 되신것을 축하합니다']);
            window.location.href = "/list"; //작동안함
        }  
    }
</script>
