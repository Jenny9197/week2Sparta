    <title>게시글 목록</title>
    
    <script>
        $(document).ready(function () {
            get_goods()
        })

        function get_goods() {
            $("#contentdetail").empty()
            $.ajax({
                type: "GET",
                url: `/api/contents`,
                data: {},
                success: function (response) {
                    let contentlist = response["postpages"]
                    console.log(response);
                    for (let i = 0; i < contentlist.length; i++) {
                        make_card(contentlist[i])
                    }
                }
            })
        }

        function make_card(item) {
            let htmlTemp = `<div class="num">num=${item["num"]}</div>
                                <div class="title">
                                    <a href="/inquire">title=${item["title"]}</a>
                                </div>
                                <div class="author">author=${item["author"]}</div>
                                <div class="date">date=${item["date"]}</div>
                                <div class="count">33</div>
                            `
            $("#contentdetail").append(htmlTemp)
        }
    </script>
